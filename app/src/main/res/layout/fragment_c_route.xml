<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edu.ntou.smartcampus.CustomMap.cRouteFragment">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/night_brightt_route"
        android:textSize="30dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/chkNightBrightRoute"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_protection_route"
        android:textSize="30dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/chkWeatherProtectionRoute"
        />


</LinearLayout>
